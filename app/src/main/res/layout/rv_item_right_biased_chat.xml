<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/tv_chat_message"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="100dp"
		android:layout_marginTop="5dp"
		android:layout_marginEnd="10dp"
		android:textColor="@color/dark_orange2"
		android:textSize="16sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="1.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_goneMarginStart="100dp"
		tools:text="메시지입니다.\n우하하울랄라\nHello World.\nasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfadsfasdfasdfasdfasdfasdf" />

	<TextView
		android:id="@+id/tv_chat_timestamp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="10dp"
		android:textColor="@color/dark_gray"
		android:textSize="10sp"
		app:layout_constraintBottom_toBottomOf="@+id/tv_chat_message"
		app:layout_constraintEnd_toStartOf="@+id/tv_chat_message"
		tools:text="2023. 1. 23.\n오전 9:12" />

</androidx.constraintlayout.widget.ConstraintLayout>